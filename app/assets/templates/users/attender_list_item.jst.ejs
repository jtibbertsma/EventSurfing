<% if (attender.avatar) { %>
  <img src="<%= attender.avatar.escape('thumb_url') %>" class="attender-thumb">
<% } %>

<div class="attender-text">
  <h5>
    <a href="<%= '#users/' + attender.id %>">
      <%= attender.escape("name") %>
    </a>
  </h5>
  <p><%= attender.escape("location") || "Somewhere" %></p>
</div>