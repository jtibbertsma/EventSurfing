<div class="row">
  <div class="col-xs-4">
    <div class="shadow-box">
      <div class="attender-header">
        <h4><%= event.escape("num_attenders") %> Going</h4>
        <% if (event.get("spots_remaining") > 0) { %>
          <div class="spots-remaining">
            <p>
              <%= event.escape("spots_remaining") %> spots remaining!
            </p>
          </div>
        <% } %>
      </div>

      <div class="attenders"></div>
    </div>
  </div>

  <div class="col-xs-7">
    <div class="event-show-head">
      <div class="event-show-head-background">
        <div>
          <h3><%= event.escape("title") %></h3>
          <h5>
            Organized by <span class="oraganizer-name">
              <%= event.escape("organizer_name") %>
            </span>
          </h5>
        </div>
      </div>
      <p class="event-when"><%= event.when() %></p>
      <p>Location link will go here</p>
    </div>

    <div class="shadow-box">
      <h4>Description</h4>
      <%= PadCrashing.Utils.writeParagraphs(event.escape("description")) %>
    </div>
  </div>
</div>