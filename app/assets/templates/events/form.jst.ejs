<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <h4 class="modal-title" id="myModalLabel">Edit Event</h4>
</div>

<div class="modal-body">
  <form>
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <label for="EventTitle">Title</label>
            <input
              type="text"
              class="form-control"
              placeholder="eg: Dragonboating on the Danube"
              id="EventTitle"
              name="event[title]"
              value="<%= event.get('title') %>"
            >
          </div>

          <div class="form-group">
            <label for="EventLocation">Location</label>
            <input
              type="text"
              class="form-control"
              placeholder="An address or the name of a place"
              id="EventLocation"
              value="<%= event.get("formatted_address") %>"
            >
          </div>

          <div class="details">
            <input type="hidden" name="lat" value="">
            <input type="hidden" name="lng" value="">
            <input type="hidden" name="formatted_address" value="">
            <input type="hidden" name="place_id" value="">
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4">
          <div class="form-group">
            <label for="StartTime">Start Time</label>
            <input
              type="time"
              class="form-control"
              id="StartTime"
              name="start_time[time]"
              value="<%= event.get("raw_start_time") && moment(event.get("raw_start_time")).format('HH:mm') %>"
            >
          </div>
        </div>

        <div class="col-xs-8">
          <div class="form-group">
            <label for="StartDate">Start Date</label>
            <input
              type="date"
              class="form-control"
              id="EndTime"
              name="start_time[date]"
              value="<%= event.get("raw_start_time") && moment(event.get("raw_start_time")).format('YYYY[-]MM[-]DD') %>"
            >
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4">
          <div class="form-group">
            <label for="EndTime">End Time</label>
            <input
              type="time"
              class="form-control"
              id="EndTime"
              name="end_time[time]"
              value="<%= event.get("raw_end_time") && moment(event.get("raw_end_time")).format('HH:mm') %>"
            >
          </div>
        </div>

        <div class="col-xs-8">
          <div class="form-group">
            <label for="EndDate">End Date</label>
            <input
              type="date"
              class="form-control"
              id="EndDate"
              name="end_time[date]"
              value="<%= event.get("raw_end_time") && moment(event.get("raw_end_time")).format('YYYY[-]MM[-]DD') %>"
            >
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <label for="NumberOfSpots">Maximum Number of Attenders</label>
            <input
              type="number"
              class="form-control"
              placeholder="If this field is left blank, then any number of people can go"
              id="NumberOfSpots"
              name="event[spots]"
              value="<%= event.get("spots") %>"
            >
          </div>

          <div class="form-group">
            <label for="Description">Describe Your Event</label>
            <textarea
              class="form-control"
              id="Description"
              rows="9"
              name="event[description]"
            ><%= event.get("description") %></textarea>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-6">
          <div class="form-group">
            <label for="ImageInput">Image Input</label>
            <button id="ImageInput" class="btn btn-primary">Upload a Background Image</button>
            <p class="help-block" id="UploadSuccess"></p>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>

<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  <button type="button" class="btn btn-primary" id="modalButton">Submit</button>
</div>